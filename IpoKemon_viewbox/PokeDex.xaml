        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="96*"/>
