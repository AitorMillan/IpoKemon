<UserControl
    x:Class="IpoKemon_viewbox.ratingUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IpoKemon_viewbox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>
        <RelativePanel Grid.ColumnSpan="2">
            <RatingControl x:Name="rcStars" HorizontalAlignment="Center" VerticalAlignment="Center"
 Width="80" Height="32" RelativePanel.AlignVerticalCenterWithPanel="True"/>
            <TextBox x:Name="tbPokemon" Height="51" Text="Pikachu"
 TextWrapping="Wrap" Background="{x:Null}" FontSize="30"
 RelativePanel.AlignVerticalCenterWith="rcStars" RelativePanel.RightOf="rcStars"/>
        </RelativePanel>
    </Grid>
</UserControl>
